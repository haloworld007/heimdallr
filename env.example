# ======================
# API Keys - 至少需要设置其中一个
# ======================
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# ======================
# OpenAI 高级配置 (可选)
# ======================
# 自定义API地址 - 用于代理或私有部署
# OPENAI_BASE_URL=https://api.openai.com/v1

# 组织ID (如果使用组织账户)
# OPENAI_ORGANIZATION=org-your_organization_id

# 默认模型配置
OPENAI_DEFAULT_MODEL=gpt-4-turbo
OPENAI_FAST_MODEL=gpt-3.5-turbo
OPENAI_SMART_MODEL=gpt-4-turbo

# ======================
# Gemini 高级配置 (可选)
# ======================
GEMINI_DEFAULT_MODEL=gemini-pro
GEMINI_SMART_MODEL=gemini-pro

# ======================
# 全局 LLM 配置 (可选)
# ======================
# 默认温度参数 (0.0-1.0)
LLM_TEMPERATURE=0.7

# 请求超时时间 (秒)
LLM_TIMEOUT=60

# 最大重试次数
LLM_MAX_RETRIES=3

# ======================
# 应用配置 (可选)
# ======================
# 日志级别
LOG_LEVEL=INFO

# 服务端口
# PORT=8000 